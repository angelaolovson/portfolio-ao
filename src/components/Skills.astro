---
import type { Skill } from '~/types/skill';

type Props = {
    skills: Skill[];
}
const props = Astro.props as Props;
const { skills } = props;
---

<div class="grid lg:grid-cols-3 md:grid-cols-2 grid-cols-1 sm:gap-15">
    {skills.map((skill) => (
        <div class="flex sm:text-xl text-lg mb-5">
            <div class="w-3 h-3 mr-4 mt-2 rounded-full bg-amber-400 flex items-center justify-center shrink-0"></div>
            <div class="flex-col">
                <div class="font-semibold mb-2">{skill.skillTitle}</div>
                <div class="font-light text-gray-600">{skill.skillInfo}</div>
            </div>
            
        </div>
    ))}
</div>
