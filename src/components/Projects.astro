---
import ContentTitleInfo from './projects/ContentTitleInfo.astro';
import ProjectLinks from './projects/ProjectLinks.astro';
import type { Project } from '~/types/project'

type Props = {
    projects: Project[];
};
const props = Astro.props as Props;
const {projects} = props;
---

<div class="flex md:flex-row flex-col gap-10">
    {projects.map((project) => (
        <div class="md:w-1/2">
            <img src={project.image}/>
        </div>
        <div class="md:w-1/2">
            <div class="font-semibold md:text-2xl text-xl mb-1">{project.projectTitle}</div>
            <div class="font-light md:text-lg mb-2 italic">{project.projectSubTitle}</div>
            <ProjectLinks project={project} />
            <ContentTitleInfo contentTitle="Description" contentInfo={project.description} />          
            <ContentTitleInfo contentTitle="My Role" contentInfo={project.myRole} />          
            <ContentTitleInfo contentTitle="Key Challenges" contentInfo={project.keyChallenges} />          
            <ContentTitleInfo contentTitle="Tools" contentInfo={project.tools} />          
        </div>
    ))}
</div>
