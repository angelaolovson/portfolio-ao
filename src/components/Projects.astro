---
import type { Project } from '~/types/project'
type Props = {
    projects: Project[];
};
const props = Astro.props as Props;
const {projects} = props;
---

<div class="flex md:flex-row flex-col gap-10">
    {projects.map((project) => (
        <div class="md:w-1/2">
            <img src={project.image}/>
        </div>
        <div class="md:w-1/2">
            <div class="font-semibold sm:text-2xl text-xl mb-1">{project.projectTitle}</div>
            <div class="text-xl mb-2 italic">{project.projectSubTitle}</div>
            <div class="flex mb-8">
                <p>Go to project: </p>
                <a href={project.liveDemoLink} target="_blank" rel="noopener noreferrer" class="text-blue-800 font-normal underline">{project.liveDemoName}</a>
                <a href={project.gitHubRepoLink} target="_blank" rel="noopener noreferrer" class="text-blue-800 font-normal underline">GitHub repo</a>
            </div>
            <div class="sm:text-lg text-gray-700 font-extralight">{project.description}</div>
            <div class="">{project.myRole}</div>
            <div class="">{project.keyChallenges}</div>
            <div class="">{project.tools}</div>            
        </div>
    ))}
</div>
